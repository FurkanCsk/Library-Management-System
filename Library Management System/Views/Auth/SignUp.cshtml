@model AuthViewModel

<div class="row offset-3 mt-5">

    <div class="col-6" style="width:60%">

        <div class="card">

            <div class="card-header fw-bold fs-4 text-center text-white" style="background-color:#212529">
                Sign-Up Form
            </div>

            <div class="card-body" style="background-color:#212529">

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <form method="post" asp-controller="Auth" asp-action="SignUp">


                    <div class="form-floating mb-2">
                        <input asp-for="FullName" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Full Name</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                        <span asp-validation-for="Email" class="text-danger mt-2 fw-bold"></span>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</labela>
                            <span asp-validation-for="Password" class="text-danger mt-2 fw-bold"></span>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="PasswordConfirm" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password Confirm</label>
                        <span asp-validation-for="PasswordConfirm" class="text-danger mt-2 fw-bold"></span>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="PhoneNumber" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger mt-2 fw-bold"></span>
                    </div>
                    



                    <button class="btn btn-danger mt-3 w-100 py-2" type="submit">Sign Up</button>
                    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
                </form>




            </div>





        </div>


    </div>


</div>